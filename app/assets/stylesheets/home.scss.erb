.top-container {
  display: flex;
  justify-content: flex-start;
  margin: 15px 0;
  padding-bottom: 15px;
  border-bottom: 1px solid #b77433;
}

.top-container:first-child {
  padding-top: 15px;
  border-top: 1px solid #b77433;
}

.top-container:nth-child(odd) {
  flex-direction: row;
  background-position: right;
}

.top-container:nth-child(even) {
  flex-direction: row-reverse;
}

.top-photo {
  width: 400px;
  height: 250px;
  overflow: hidden;
}

.top-photo img {
  width: 100%;
  height: auto;
  min-height: 100%;
}

.rating {
  display: flex;
  width: 250px;
  position: relative;
}

.rating::after {
  content: "";
  opacity: 0.75;
  top: 15px;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;
}

.rating p {
  margin: auto;
  font-size: 1.2rem;
  color: #444;
}

.tagcloud {
  width: 100%;
  height: 256px;
  padding-left: 30px;
  background: url(<%= asset_path('cloud.png') %>) no-repeat right;
}


