<div ng-controller="AccountCtrl">
  <form name="loginForm">
    <div class="field">
      <label for="account_email">Email</label>
      <input type="email" name="account[email]" id="account_email" ng-model="account.email">
    </div>
    <div class="field">
      <label for="account_password">Password</label>
      <input type="password" name="account[password]" id="account_password" ng-model="account.password">
    </div>
    <div class="actions">
      <button ng-click="login(loginForm)">Submit</button>
    </div>
  </form>
</div>
<ul>
  <li>
    <%= link_to 'Sign up with Facebook', account_facebook_omniauth_authorize_path %>
  </li>
  <li>
    <%= link_to 'Sign up with Twitter', account_twitter_omniauth_authorize_path %>
  </li>
  <li>
    <%= link_to 'Sign up with Vkontakte', account_vkontakte_omniauth_authorize_path %>
  </li>
  <li>
    <%= link_to 'Sign up', new_account_path %>
  </li>
</ul>