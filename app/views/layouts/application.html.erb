<!DOCTYPE html>
<html ng-app="app">
  <head>
    <title>Portfl</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="brand-logo right">Portfl</a>
        <ul id="nav-mobile" class="left hide-on-med-and-down">
          <li><%= link_to 'Users', users_path %></li>
          <% if current_account %>
            <li>You currently logged in as <b><%= current_account.user.name %></b></li>
            <li><%= button_to('Logout', current_account, :method => :delete) %> </li>
          <% else %>
            <li>
              <%= link_to 'Sign up', new_session_path %>
            </li>
          <% end %>
          <li style="height: 64px;">
            <form ng-controller="searchformCtrl" ng-submit="navsearchSubmit();">
              <div class="input-field">
                <input id="search" type="search" ng-model="query" required>
                <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                <i class="material-icons">close</i>
              </div>
            </form>
          </li>
        </ul>
      </div>
    </nav>
    <p class="alert"><%= alert %></p>

    <div class="container"><%= yield %></div>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </body>
</html>
