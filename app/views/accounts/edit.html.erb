<div ng-controller="accEditCtrl">
  <form name="accountEditForm">
    <div class="field">
      <label for="account_currentPassword"><%= t('.currentPassword') %></label>
      <input type="password" id="account_currentPassword" ng-model="currentPassword" required>
    </div>

    <div class="field">
      <label for="account_newPassword_1"><%= t('.newPassword') %></label>
      <input type="password" id="account_newPassword_1" ng-model="newPassword" required>
    </div>

    <div class="field">
      <label for="account_newPassword_2"><%= t('.newPasswordConfirm') %></label>
      <input type="password" id="account_newPassword_2" ng-model="newPasswordConfirm" required>
    </div>
    <div class="actions">
      <button class="btn" ng-click="submit(accountEditForm)" ng-disabled="!newPassword || newPassword != newPasswordConfirm"><%= t('submit') %></button>
    </div>
  </form>
</div>
